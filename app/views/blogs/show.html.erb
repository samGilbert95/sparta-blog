<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @blog.user.full_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <%= @blog.body %>
</p>

<p>
  <strong>Image:</strong>
  <%= @blog.image %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>

<br>

<%= link_to 'New Comment', new_blog_comment_path(@blog) %>

<ul class="list-group">
<% @blog.comments.each do  |comment|%>
  <li class="list-group-item"><%= comment.user.full_name %>
    <br>
    <%= link_to comment.body, edit_blog_comment_path(@blog,comment) %></li>
<% end  %>
</ul>


