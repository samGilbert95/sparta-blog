<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Blog</th>
      <th>User</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.blog_id %></td>
        <td><%= comment.user.first_name %> <%= comment.user.last_name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Show', blog_comment_path(@blog,comment) %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(@blog,comment) %></td>
        <td><%= link_to 'Destroy', blog_comment_url(@blog,comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_blog_comment_path %>
